<!-- 商品详情页 -->

<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <h4 style="color: darkgrey;"><b>Product Introduction:</b></h4><br>
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
        <hr>
        <h4 style="color: darkgrey;"><b>Product Reviews:</b></h4><br>
        <dl class="dl-horizontal">
          <dt>Rating</dt>
          <dd>5 Stars</dd>
        </dl>
      </div>

    </div>

  </article>

</section>
